<Window x:Class="PokemonAPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonAPI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstPokemon" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,400,0" SelectionChanged="lstPokemon_SelectionChanged"/>
        <Label Content="Weight" HorizontalAlignment="Left" Margin="465,36,0,0" VerticalAlignment="Top"/>
        <Label Content="Height" HorizontalAlignment="Left" Margin="686,36,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Left" Margin="429,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <TextBox x:Name="txtHeight" HorizontalAlignment="Left" Margin="649,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Image x:Name="imgPoke" Margin="422,111,21,70"/>
        <Button x:Name="btnSwitch" Content="Switch" HorizontalAlignment="Left" Margin="556,375,0,0" VerticalAlignment="Top" Height="32" Width="89" Click="btnSwitch_Click"/>

    </Grid>
</Window>
